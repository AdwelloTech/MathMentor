{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "apps/web/src/*"
      ],
      "@shared/*": [
        "packages/shared/src/*"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "apps",
    "packages"
  ]
}